using UnityEngine;

public class CameraLook : MonoBehaviour
{
    public Transform player;   // drag Player here
    public float mouseSensitivity = 200f;

    private float xRotation = 0f;

    void Start()
    {
        Cursor.lockState = CursorLockMode.Locked; // lock cursor in center
        Cursor.visible = false;
    }

    void Update()
    {
        float mouseX = Input.GetAxis("Mouse X") * mouseSensitivity * Time.deltaTime;
        float mouseY = Input.GetAxis("Mouse Y") * mouseSensitivity * Time.deltaTime;

        // Rotate player left/right with mouseX
        player.Rotate(Vector3.up * mouseX);

        // Rotate camera up/down with mouseY
        xRotation -= mouseY;
        xRotation = Mathf.Clamp(xRotation, -80f, 80f); // limit looking up/down
        transform.localRotation = Quaternion.Euler(xRotation, 0f, 0f);
    }
}