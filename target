using UnityEngine;

public class Target : MonoBehaviour
{
    [SerializeField] int hitPoints = 3;

    public void TakeDamage(int dmg)
    {
        hitPoints -= dmg;

        transform.localScale *= 0.8f; // shrink
        if (hitPoints <= 0)
        {
            GameController.Instance.TargetDestroyed();
            Destroy(gameObject);
        }
    }
}